    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-dts": "3.0.2",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-scss": "^4.0.0",
    "typescript": "4.9.5"
